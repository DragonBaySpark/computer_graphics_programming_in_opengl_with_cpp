// 指定GLSL版本为4.30
#version 430

// 定义输出变量color，表示最终的像素颜色
out vec4 color;

/**
 * 片段着色器的主函数
 * 负责设置每个片段（像素）的颜色
 */
void main(void)
{
    // 设置输出颜色
    // vec4参数分别表示：
    // r=0.0：红色分量为0
    // g=0.0：绿色分量为0
    // b=1.0：蓝色分量为1（纯蓝色）
    // a=1.0：完全不透明
    color = vec4(0.0, 0.0, 1.0, 1.0);
}